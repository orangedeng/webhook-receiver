#!/bin/bash
set -e

source $(dirname $0)/version

ARCH=${ARCH:-"amd64"}
SUFFIX="-${ARCH}"

cd $(dirname $0)/..

TAG=${TAG:-${VERSION}${SUFFIX}}
REPO=${REPO:-cnrancher}

if echo $TAG | grep -q dirty; then
    TAG=dev
fi

mkdir -p dist/artifacts
for file in `find bin -print`; do 
    shortten=${file#bin\/}
    case "$shortten" in 
        */*/*)
        binary=`basename $shortten .exe`
        platform=`dirname $shortten`
        os="${platform%/*}"
        arch="${platform#*/}"
        ext=""
        [ "$os" = "windows" ] && ext=".exe"
        echo $os $arch $binary
        cp "$file" dist/artifacts/$binary-$os-$arch$ext
        ;;
    esac

done

IMAGE=${REPO}/webhook-receiver:${TAG}
DOCKERFILE=package/Dockerfile
if [ -e ${DOCKERFILE}.${ARCH} ]; then
    DOCKERFILE=${DOCKERFILE}.${ARCH}
fi

docker build -f ${DOCKERFILE} -t ${IMAGE} .
echo ${REPO}/webhook-receiver:${VERSION} > dist/images.txt

echo Built ${IMAGE}